{
    "name": "jobboard/app",
    "description": "Plateforme de mise en relation entre stagiaires et entreprises",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "JobBoard Team",
            "email": "contact@jobboard.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "altorouter/altorouter": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "JobBoard\\Models\\": "src/models/",
            "JobBoard\\Controllers\\": "src/controllers/",
            "JobBoard\\Middleware\\": "src/middleware/",
            "JobBoard\\Services\\": "src/services/",
            "JobBoard\\Utils\\": "src/utils/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
